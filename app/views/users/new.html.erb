<div class="sign-up-form-background">
<h1 class="sign-up-title">Signup!</h1>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<%= form_for :user, url: '/users', html: { class: "sign-in" }  do |f| %>

  <div><label>Name: </label> <%= f.text_field :name %></div>
  <div><label>Email:</label> <%= f.text_field :email %></div>
  <div><label>Password: <%= f.password_field :password %></label></div>
  <div><label>Password Confirmation: <%= f.password_field :password_confirmation %></label></div>
  <div><label><%= f.submit "Submit" %></label></div>
<% end %>
</div>
